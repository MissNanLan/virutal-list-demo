{
  "git": {
    "commit": false,
    "tag": true,
    "push": false,
    "pushRepo": "git@github.com:MissNanLan/virutal-list-demo.git",
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "after:git:release": "git push origin HEAD"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨新功能"
          },
          {
            "type": "fix",
            "section": "🐛问题修复"
          },
          {
            "type": "docs",
            "section": "📚文档"
          }
        ]
      }
    }
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  }
}
